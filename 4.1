def duplicate_zeros(arr):
   
    if not arr or len(arr) == 1:
        return arr
    
    if arr[0] == 0:
        arr.insert(1, 0)
      
        return duplicate_zeros(arr[2:])
    else:
       
        return [arr[0]] + duplicate_zeros(arr[1:])

# Приклад використання:
input_arr = [1, 0, 2, 3, 0, 4, 5, 0]
output_arr = duplicate_zeros(input_arr)

print("Input:", input_arr)
print("Output:", output_arr)

